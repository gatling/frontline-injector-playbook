{
  "builders": [{
    "type": "amazon-ebs",
    "ami_name": "FrontLine Probe AMI (Amazon Linux 2) w/ OpenJDK {{ user `java_version` | clean_resource_name }}",
    "ami_description": "OpenJDK {{ user `java_major` }}",
    "force_deregister": true,
    "ami_groups": "all",
    "ami_regions": "{{ user `copy_regions` }}",
    "spot_price": "1",
    "spot_instance_types": ["t2.large"],
    "region": "{{ user `region` }}",
    "ssh_username": "ec2-user",
    "ssh_interface": "public_ip",
    "source_ami_filter": {
      "most_recent": true,
      "owners": ["amazon"],
      "filters": {
        "virtualization-type": "hvm",
        "name": "{{ user `ami` }}",
        "root-device-type": "ebs"
      }
    },
    "tags": {
      "JavaVersion": "{{ user `java_version` }}",
      "JavaVendor": "{{ user `java_vendor` }}",
      "JavaBundleType": "{{ user `java_bundle_type` }}",
      "KernelVersion": "{{user `kernel_version`}}"
    }
  }],
  "provisioners": [{
    "type": "ansible",
    "playbook_file": "../probe.yml",
    "user": "ec2-user",
    "ansible_env_vars": ["ANSIBLE_HOST_KEY_CHECKING=False"],
    "extra_arguments": [
      "--become",
      "--extra-vars", "install_path=/opt",
      "--extra-vars", "java_major={{ user `java_major` }}",
      "--extra-vars", "java_version={{ user `java_version` }}",
      "--extra-vars", "java_vendor={{ user `java_vendor` }}",
      "--extra-vars", "java_bundle_type={{ user `java_bundle_type` }}"
    ]
  }]
}
