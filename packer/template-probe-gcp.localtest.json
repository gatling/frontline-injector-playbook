{
  "builders": [{
    "type": "googlecompute",
    "source_image_family": "debian-10",
    "image_name": "test-injector-{{ user `java_version` | clean_resource_name }}-{{ timestamp }}",
    "image_description": "TEST - OpenJDK {{ user `java_major` }}",
    "image_family": "injector-{{ user `java_major` }}",
    "project_id": "{{ user `project_id` }}",
    "ssh_username": "{{ user `ssh_username` }}",
    "zone": "{{ user `zone` }}"
  }],
  "provisioners": [{
    "type": "ansible",
    "playbook_file": "../probe.yml",
		"use_proxy": false,
    "user": "{{ user `ssh_username` }}",
    "ansible_env_vars": ["ANSIBLE_HOST_KEY_CHECKING=False"],
    "extra_arguments": [
      "--become",
      "--extra-vars", "install_path=/opt",
      "--extra-vars", "java_major={{ user `java_major` }}",
      "--extra-vars", "java_vendor={{ user `java_vendor` }}",
      "--extra-vars", "java_version={{ user `java_version` }}",
      "--extra-vars", "java_bundle_type={{ user `java_bundle_type` }}"
    ]
  }],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json"
    }
  ]
}
